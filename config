## global color var
set $based3    #002b36
set $based2    #073642
set $based1    #586e75
set $based0    #657b83
set $base0     #839496
set $base1     #93a1a1
set $base2     #eee8d5
set $base3     #fdf6e3
set $yellow    #b58900
set $orange    #cb4b16
set $red       #dc322f
set $magenta   #d33682
set $violet    #6c71c4
set $blue      #268bd2
set $cyan      #2aa198
set $green     #859900


# client color setting
client.focused            $based3   $based2   $base3   $based3  $based2
client.focused_inactive   $based3   $based3   $base0   $based3  $based3
client.unfocused          $based3   $based3   $base0   $based3  $based3
client.urgent             $based3   $magenta  $base3   $based3  $magenta


# First of all, I use the Win key as the Super-Key
set $mod Mod4

# If you wants to use Alt as the Super-Key, just use config below
# set $mod Mod1

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango: FiraCode Nerd Font 8


# Config about what you wants to run after you starts your system
exec_always --no-startup-id nm-applet
# exec_always fcitx
exec_always --no-startup-id compton -b
exec_always udiskie # Auto mount your moveable disk
exec variety
exec --no-startup-id ~/.config/i3/i3Autostart.sh


# auto-lock
# exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock-flancy --nofork


# audio ctrl
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +7% && $refresh_i3status
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -7% && $refresh_i3status
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status


# Backlight ctrl (need root)
bindsym XF86KbdBrightnessUp     exec light -A 10
bindsym XF86KbdBrightnessDown   exec light -U 10


# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod


# Start a application quickly as you want
# bindsym $mod+Return exec i3-sensible-terminal
# bindsym $mod+Return exec cool-retro-term
bindsym $mod+Return exec alacritty
# bindsym $mod+t exec st
bindsym $mod+z exec firefox
bindsym $mod+s exec dmenu_run
bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
bindsym $mod+m exec typora
bindsym $mod+x exec google-chrome
# bindsym $mod+x exec chromium
bindsym $mod+c exec code
bindsym $mod+n exec nautilus
bindsym $mod+g exec netease-cloud-music
bindsym $mod+a exec gnome-control-center
# Close focused window
bindsym $mod+Shift+q kill
# Lock
bindsym $mod+Ctrl+l exec i3lock-fancy
# bind print screen
bindsym Print exec gnome-screenshot


# Change the focus window
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+i focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right
# Move the window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right


# bindsym $mod+semicolon split h # the key H has been use
# bindsym $mod+v split v


bindsym $mod+f fullscreen toggle


